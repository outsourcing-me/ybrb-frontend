.search-bar {
  margin: 30px 0 25px;
  line-height: 45px;
  border: 2px solid gray-color;
  border-width: 2px 0 2px 0;
  padding: 0 5px;
  a {
    color: inherit;
    &:hover {
      color: main-color;
    }
  }
  .icon-search {
    position: absolute;
    right: 15px;
    top: 2px;
  }
  .search-btn {
    width: 100%;
    height: 25px;
    --webkit-apprearance: none;
    background: small-gray-color;
    border: 1px solid gray-color;
  }
  .icon-search {
    color: gray-color - 20%;
  }
}

.menu {
  line-height: 45px;
  margin: 15px 0;
  font-size: 16px;
  border-bottom: 2px solid main-color;
  a {
    color: inherit;
  }
  .main-nav {
    color: white; // padding: 0 5px;
    background-color: #3a3a3a;
    font-weight: bold;
    overflow: hidden;
    a {
      padding: 0 11px;
      float: left;
      position: relative;
      &.active,
      &:hover {
        &:after {
          content: '';
          position: absolute;
          border: 2px solid main-color;
          left: 0;
          bottom: -2px;
          right: 0;
        }
      }
      &.blue {
        &.active,
        &:hover {
          &:after {
            border-color: blue-color;
          }
        }
      }
      &.green {
        &.active,
        &:hover {
          &:after {
            border-color: green-color;
          }
        }
      }
      &.yellow {
        &.active,
        &:hover {
          &:after {
            border-color: yellow-color;
          }
        }
      }
      &.orange {
        &.active,
        &:hover {
          &:after {
            border-color: orange-color;
          }
        }
      }
      &.purple {
        &.active,
        &:hover {
          &:after {
            border-color: purple-color;
          }
        }
      }
    }
  }
  .sub-nav {
    overflow: hidden;
    padding-left: 35px;
    a {
      float: left;
      padding: 0 11px;
      &:hover {
        color: main-color;
      }
    }
  }
}
