.headline {
  background-color: xxs-gray-color;
  padding: 15px 100px 30px;
  position: relative;
  h2 {
    font-size: 36px;
    text-align: center;
    margin: 10px 0;
  }
  p {
    color: xs-gray-color;
  }
  a {
    color: red-color;
  }
  &:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 10px;
    border-bottom: 2px solid gray-color;
  }
  .star {
    position: absolute;
    left: -4px;
    top: -4px;
  }
}

.important-new {
  background-color: xxs-gray-color;
  &.purple {
    .keywords {
      background-color: purple-color;
    }
    .news-list {
      h4 {
        color: purple-color;
      }
    }
  }
  figure {
    img {
      width: 100%;
    }
  }
  .keywords {
    color: white;
    background-color: main-color;
    h4 {
      font-size: 16px;
      line-height: 35px;
      padding: 0 10px;
      border-bottom: 1px solid white;
    }
  }
  .keywords-item {
    padding: 5px 10px;
    overflow: hidden;
    a {
      color: inherit;
    }
    li {
      margin-right: 10px;
      float: left;
    }
  }
  .news-list {
    overflow: hidden;
    background-color: xxs-gray-color;
    padding: 15px;
    .header {
      padding-bottom: 5px;
      border-bottom: 2px solid s-gray-color;
      a {
        color: l-gray-color;
        &:hover {
          color: main-color;
        }
      }
    }
    .new-card {
      overflow: hidden;
      padding: 5px 0;
      line-height: 2em;
      h3 {
        margin: 5px 0;
        font-size: 22px;
      }
      .new-link {
        margin-right: 30px;
        float: left;
        color: font-color;
      }
    }
    h4 {
      font-size: 16px;
      color: main-color;
    }
  }
}

.simple-card {
  .simple-card-header {
    margin-left: 20px; // overflow: hidden;
    position: relative;
    border-bottom: 2px solid s-gray-color;
    box-sizing: border-box;
    height: 28px;
    margin-bottom: 15px;
    a {
      color: l-gray-color;
      &:hover {
        color: main-color;
      }
    }
    h3 {
      font-size: 16px;
    }
    &:before {
      position: absolute;
      content: '';
      width: 8px;
      height: 28px;
      background-color: main-color;
      left: -20px;
      top: 0;
    }
    &.blue:before {
      background-color: blue-color;
    }
    &.yellow:before {
      background-color: yellow-color;
    }
    &.green:before {
      background-color: green-color;
    }
    &.orange:before {
      background-color: orange-color;
    }
    &.purple:before {
      background-color: purple-color;
    }
    .title {
      float: left;
    }
    .more {
      float: right;
    }
    &:after {
      clear: both;
      content: '';
      display: block;
    }
  }
  .simple-card-video {
    figure {
      position: relative;
      &>img {
        width: 100%;
      }
    }
    figcaption {
      color: white;
      position: absolute;
      bottom: 10px;
      .icon-play {
        vertical-align: middle; // position: absolute;
        margin-left: 10px;
        height: 50px;
        width: 50px;
        float: left;
      }
      .content {
        overflow: hidden;
        margin-left: 10px;
        display: inline-block;
      }
      h3 {
        line-height: 1.3em; // padding-left: 70px;
        position: relative;
        font-size: 22px;
      }
    }
    .video-list {
      .icon-video {
        vertical-align: middle;
        margin-right: 5px;
      }
      li {
        float: left;
        width: 50%;
        margin-bottom: 10px;
        &:nth-of-type(2n) {
          text-align: right;
        }
      }
    }
  }
  .simple-card-content {
    img {
      width: 100%;
    }
    img.thumb {
      width: auto;
      float: left;
      margin-right: 15px;
    }

    .card-p {
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      margin-bottom: 15px;
    }
    .card-item {
      overflow: hidden;
      color: l-gray-color;
      line-height: 1.8em;
      margin-bottom: 10px;
      h3 {
        margin-bottom: 5px;
        font-size: 22px;
        color: font-color;
      }
    }
  }
  .simple-card-img {
    min-height: 390px;
    img {
      width: 100%; // height: 100%;
    }
    figure {
      position: relative;
    }
    figcaption {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 10px;
      color: white;
      background: rgba(0, 0, 0, .6);
      p {
        @extend .ell;
      }
    }
  }
  .simple-detail-card,
  .simple-detail-pic-card {
    .title {
      padding: 30px 40px;
      border-bottom: 1px solid gray-color;
      small {
        display: block;
        text-align: right;
      }
    }
    .content {
      padding: 30px 40px;
      font-size: 18px;
      line-height: 2em;
      .img-line {
        text-align: center;
        margin: 10px 0;
      }
    }
    h2 {
      font-size: 36px;
    }
    h4 {
      font-size: 25px;
    }
    .qrcode {
      text-align: center;
      figure {
        padding: 8px;
        background-color: xxs-gray-color;
        display inline-block;
      }
      figcaption {
        margin-top: 5px;
      }
    }
  }
  .simple-detail-pic-card {
    .title {
      padding: 20px 30px;
      border-bottom: none;
      small {
        display: block;
        text-align: right;
        margin-top: -25px;
      }
    }
    .content {
      padding: 20px 30px;
      font-size: 18px;
      line-height: 2em;
      .img-line {
        text-align: center;
        margin: 10px 0;
      }
    }
  }
  .simple-comment-card {
    .comment-textarea {
      background-color: xxs-gray-color;
      padding: 10px;
      overflow: hidden;
      position: relative;
      .tip-login {
        position: absolute;
        top: 35px;
        left: 10px;
      }
      &.active {
        border: 1px solid main-color;
        background-color: white;
      }
      textarea {
        width: 600px;
        height: 66px;
        border: 0;
        background: none;
        float: left;
      }
      button {
        float: right;
        height: 70px;
        width: 70px;
        background-color: main-color;
        color: white;
        font-size: 13px;
        padding: 0;
        .icon-edit {
          font-size: 25px;
        }
      }
    }
    .comment-list {
      margin-top: 60px; // padding: 10px;
      // background-color: xxs-gray-color;
      li {
        margin-bottom: 30px;
      }
      .comment-box {
        padding: 10px 10px 20px 30px;
        border: 1px solid gray-color;
        margin-left: 25px;
        position: relative;
        .title {
          color: gray-color;
          overflow: hidden;
          margin-bottom: 15px;
          h3 {
            font-size: 14px;
            float: left;
          }
          small {
            float: right;
          }
        }
        .content {
          line-height: 1.8em;
        }
        .avatar {
          position: absolute;
          width: 50px;
          height: 50px;
          border-radius: 50%;
          top: -25px;
          left: -25px;
        }
      }
      .comment-btns {
        text-align: right;
        padding: 10px 0;
        button {
          border: 0;
          background: 0;
          --webkit-appearance: none;
          color: gray-color;
          &:hover,
          &.active {
            color: main-color;
          }
        }
      }
    }
  }
}

.simple-figure {
  position: relative;
  border-radius: 0 0 10px 10px;
  overflow: hidden;
  img {
    width: 100%;
  }
  figcaption {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .7);
    color: white;
    line-height: 1.8em;
    padding: 5px 10px;
  }
}

.full-figure {
  position: relative;
  img {
    width: 695px!important;
    height: 395px;
  }
  figcaption {
    position: absolute;
    width: 335px;
    padding: 30px;
    right: 0;
    background-color: rgba(0, 0, 0, .7);
    color: white;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 10px;
    line-height: 1.8em;
  }
}

.img-slide1 {
  &.thumb {
    background-color: xxs-gray-color;
    padding: 10px;
    box-sizing: border-box;
    .swiper-slide {
      height: 100%;
      opacity: 0.4;
    }
    .swiper-slide-active {
      opacity: 1;
    }
  }
  .img-box {
    // width: 217px;
    // height: 217px;
    display block; // margin-right: 10px;
    width: 100%;
    img {
      width: 100%; // height: 100%;
    }
  }
  figcaption {
    padding: 15px 0;
    p {
      font-size: 14px;
      line-height: 1.8em;
    }
  }
}

.img-slide8 {
  padding: 0 40px;
  background: white;
  position: relative;
  .swiper-slide {
    // height: 217px;
    // width: 217px!important;
  }
  .img-box {
    // width: 217px;
    // height: 217px;
    display block; // margin-right: 10px;
    img {
      width: 100%;
      height: 100%;
    }
  }
  .icon-left,
  .icon-right {
    color: font-color;
    position: absolute;
    z-index: 99;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    &:hover {
      color: main-color;
    }
  }
  .icon-left {
    left: -8px;
  }
  .icon-right {
    right: -8px;
  }
}
