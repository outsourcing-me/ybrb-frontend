.side-menu {
  position: fixed;
  z-index: 999;
  right: -1px;
  top: 50%;
  transform: translateY(-50%);
  min-width: 115px;
  background-color: xxs-gray-color;
  border: 1px solid gray-color;
  color: minor-font-color;
  .navs{
    a {
      color: inherit;
      line-height: 55px;
      display: block;
      text-align: center;
      border-bottom: 1px solid gray-color;
      border-left: 5px solid xxs-gray-color;
      box-sizing: border-box;
      &.active,
      &:hover {
        border-left: 5px solid main-color;
        color: main-color;
      }
    }
  }
  .ad-container {
    img {
      width: 100%;
    }
  }
  .buttons {
    height: 50px;
    line-height: 50px;
  }
}
