.simple-card {
  .simple-card-header {
    margin-left: 20px; // overflow: hidden;
    position: relative;
    border-bottom: 2px solid small-gray-color;
    box-sizing: border-box;
    height: 28px;
    margin-bottom: 15px;
    a {
      color: l-gray-color;
      &:hover {
        color: main-color;
      }
    }
    h3 {
      font-size: 16px;
    }
    &:before {
      position: absolute;
      content: '';
      width: 8px;
      height: 28px;
      background-color: main-color;
      left: -20px;
      top: 0;
    }
    &.blue:before {
      background-color: blue-color;
    }
    &.yellow:before {
      background-color: yellow-color;
    }
    &.green:before {
      background-color: green-color;
    }
    &.orange:before {
      background-color: orange-color;
    }
    &.purple:before {
      background-color: purple-color;
    }
    .title {
      float: left;
    }
    .more {
      float: right;
    }
    &:after {
      clear: both;
      content: '';
      display: block;
    }
  }
  .simple-card-video {
    figure {
      position: relative;
      &>img {
        width: 100%;
      }
    }
    figcaption {
      color: white;
      position: absolute;
      bottom: 10px;
      .icon-play {
        vertical-align: middle; // position: absolute;
        margin-left: 10px;
        height: 50px;
        width: 50px;
        float: left;
      }
      .content {
        overflow: hidden;
        margin-left: 10px;
        display: inline-block;
      }
      h3 {
        line-height: 1.3em; // padding-left: 70px;
        position: relative;
        font-size: 22px;
      }
    }
    .video-list {
      .icon-video {
        vertical-align: middle;
        margin-right: 5px;
      }
      li {
        float: left;
        width: 50%;
        margin-bottom: 10px;
        &:nth-of-type(2n) {
          text-align: right;
        }
      }
    }
  }
  .simple-card-content {
    img {
      width: 100%;
    }
    .card-p {
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      margin-bottom: 15px;
    }
    .card-item {
      color: l-gray-color;
      line-height: 1.8em;
      margin-bottom: 10px;
      h3 {
        margin-bottom: 5px;
        font-size: 22px;
        color: font-color;
      }
    }
  }
  .simple-card-img {
    min-height: 390px;
    img {
      width: 100%;
      // height: 100%;
    }
    figure {
      position: relative;
    }
    figcaption {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 10px;
      color: white;
      background: rgba(0, 0, 0, .6);
      p {
        @extend .ell;
      }
    }
  }
}
